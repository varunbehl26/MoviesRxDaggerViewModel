<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.synnapps.carouselview.CarouselView
        android:id="@+id/iv_top_poster"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#fff"
        android:foreground="?android:selectableItemBackground"
        android:transitionName="transition_poster"
        android:visibility="visible"
        app:fillColor="#FFFFFFFF"
        app:indicatorVisibility="visible"
        app:layout_collapseMode="parallax"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pageColor="#00000000"
        app:slideInterval="3000"
        tools:background="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/title_area"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="240dp"
        android:background="?attr/colorPrimary"
        android:minHeight="126dp"
        android:orientation="vertical"
        android:padding="16dp"
        tools:targetApi="lollipop">

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:textSize="12sp"
            tools:text="2015   R   141 min" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="140dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Cabin in the Woods" />

        <TextView
            android:id="@+id/genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:textSize="12sp"
            tools:text="Action, Horror, Thriller" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="190dp"
        android:foreground="?android:selectableItemBackground"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.05"
        tools:background="@tools:sample/avatars"
        tools:targetApi="lollipop" />

</merge>

